// 文章列表样式
.post-list-container
  max-width: 900px
  margin: 40px auto
  padding: 40px
  background: #ffffff
  border-radius: 12px
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08)
  
.post-list-header
  text-align: center
  margin-bottom: 40px
  
  h1
    color: #2c3e50
    font-size: 2.5em
    margin: 0
    font-weight: 300
    letter-spacing: -0.5px

.post-list
  list-style: none
  padding: 0
  margin: 0
  
.post-item
  border-bottom: 1px solid #f5f5f5
  padding: 20px 0
  transition: all 0.3s ease
  border-radius: 8px
  margin-bottom: 5px
  
  &:hover
    background-color: #fafbfc
    transform: translateY(-2px)
    box-shadow: 0 2px 15px rgba(0, 0, 0, 0.05)
    padding-left: 15px
    padding-right: 15px
    
  &:last-child
    border-bottom: none
    
.post-meta
  flex-shrink: 0
  margin-right: 30px
  
.post-date
  color: #95a5a6
  font-size: 0.85em
  margin-bottom: 8px
  font-weight: 500
  letter-spacing: 0.5px
  
.post-title
  margin: 0
  
  a
    color: #2c3e50
    text-decoration: none
    font-size: 1.2em
    font-weight: 500
    transition: all 0.3s ease
    line-height: 1.4
    display: block
    
    &:hover
      color: #3498db
      padding-left: 5px
    
// 分页样式
.pagination
  text-align: center
  margin-top: 50px
  
  a, span
    display: inline-block
    padding: 12px 18px
    margin: 0 8px
    border: 2px solid #ecf0f1
    border-radius: 8px
    text-decoration: none
    color: #2c3e50
    font-weight: 500
    transition: all 0.3s ease
    
  a:hover
    background-color: #3498db
    color: white
    border-color: #3498db
    transform: translateY(-2px)
      
  .current
    background-color: #3498db
    color: white
    border-color: #3498db
    
// 响应式设计
@media (max-width: 768px)
  .post-list-container
    padding: 20px 15px
    
  .post-list-header
    margin-bottom: 40px
    
    .blog-title
      font-size: 2em
      
    .blog-subtitle
      font-size: 1em
      
  .post-item
    flex-direction: column
    align-items: flex-start
    padding: 15px 0
    
    &:hover
      padding-left: 0
      
  .post-meta
    margin-right: 0
    margin-bottom: 10px
    
  .post-date
    font-size: 0.8em
    padding: 4px 8px
    
  .post-link
    font-size: 1.1em