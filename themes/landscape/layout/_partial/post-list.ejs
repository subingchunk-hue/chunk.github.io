<div class="post-list-container">
  <div class="post-list-header">
    <h1 class="blog-title">我的博客</h1>
    <p class="blog-subtitle">记录学习与思考的点点滴滴</p>
  </div>
  
  <div class="post-list">
    <% page.posts.each(function(post){ %>
      <div class="post-item">
        <div class="post-meta">
          <time class="post-date" datetime="<%= post.date.toISOString() %>">
            <%= post.date.format('YYYY-MM-DD') %>
          </time>
        </div>
        <h2 class="post-title">
          <a href="<%- url_for(post.path) %>" class="post-link">
            <%= post.title || 'Untitled' %>
          </a>
        </h2>
        <% if (post.excerpt){ %>
          <p class="post-excerpt">
            <%= post.excerpt %>
          </p>
        <% } %>
      </div>
    <% }) %>
  </div>
  
  <% if (page.total > 1){ %>
    <nav class="pagination">
      <% var prev_text = "← 上一页";var next_text = "下一页 →"%>
      <%- paginator({
        prev_text: prev_text,
        next_text: next_text,
        escape: false
      }) %>
    </nav>
  <% } %>
</div>